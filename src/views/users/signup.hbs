<div class="col-4 mx-auto">
<div class="card text-center">
    <div class="card-header">
        <h3>New Account</h3>
    </div>
    <div class="card-body">
        <form action="/users/signup" method="POST">
        <div class="form-group">
            <input type="text" name="name" class="form-control" placeholder="Name" value="{{name}}" autofocus>
        </div>
        <div class="form-group">
            <input type="text" name="email" class="form-control" placeholder="Email" value="{{email}}" autofocus>
        </div>
          <div class="form-group">
            <input type="password" name="password" class="form-control" placeholder="Password" autofocus>
        </div>
        <div class="form-group">
            <input type="password" name="confirm_password" class="form-control" placeholder="Confirm Password" autofocus>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block">SignUp</button>
        </div>
        </form>
    </div>
</div>